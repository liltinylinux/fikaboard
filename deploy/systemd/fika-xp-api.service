[Unit]
Description=Fika XP API (Discord OAuth + Quests)
After=network.target

[Service]
Type=simple
WorkingDirectory=/opt/fika_xp
User=ubuntu
Group=ubuntu
ExecStart=/opt/fika_xp/venv/bin/python -m uvicorn api.main:app --host 127.0.0.1 --port 8088 --proxy-headers
Restart=always
RestartSec=1

[Install]
WantedBy=multi-user.target